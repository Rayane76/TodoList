<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1> Sign up </h1>
  </div>
  <form action="/signup" method="post">
    <div class="box">
      <input type="text" name="username" placeholder="Enter a Username" autocomplete="off" required pattern=".{,8}">
      <p> <%=message%></p>
      <input type="password" id="password" name="password" placeholder="Enter a password" required pattern=".{6,}">
      <input type="password" id="confirm_password" name="confirm" placeholder="confirm password" required>
    </div>
     <div class="text-center">
       <button class="btn btn-primary btn-lg" type="submit" name="log">Sign up</button>
     </div>
  </form>

  <ul>
    <li>Username shouldn't be more than 8 characters</li>
    <li>Password should be at least 6 characters</li>
  </ul>

<script src="index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
